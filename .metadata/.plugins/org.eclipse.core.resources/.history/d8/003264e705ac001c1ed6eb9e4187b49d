package DynamicProgramming;

public class SubsetSum {
	int dp[][];
	boolean dp1[][];
	
	public void ArrayInit(int n,int tot_wt) {
		dp = new int[n+1][tot_wt+1];
		for(int i=0;i<n+1;i++) {
			for(int j=0;j<tot_wt+1;j++) {
				dp[i][j]=-1;
			}
		}
	}
	
	
	public void ArrayInit1(int n,int tot_wt) {
		dp1 = new boolean[n+1][tot_wt+1];
		for(int i=0;i<n+1;i++) {
			for(int j=0;j<tot_wt+1;j++) {
				if(j==0)
					dp1[i][j]=true;
				else
					dp1[i][j]=false;
			}
		}
	}
	
	
	public boolean recSubsetSum(int wt[],int tot_wt,int n){
		if(tot_wt==0)
			return true;
		else if(n==0)
			return false;
		
		if(wt[n-1]<=tot_wt)
			return recSubsetSum(wt,tot_wt-wt[n-1],n-1) ||
					recSubsetSum(wt,tot_wt,n-1);
		else
			return recSubsetSum(wt,tot_wt,n-1);
	}
	
	public int memSubsetSum(int wt[],int tot_wt,int n){
		if(tot_wt==0)
			return 1;
		if(n<=0)
			return 0;
		return -1;
		
//		if(dp[n-1][tot_wt]!=-1)
//			return dp[n-1][tot_wt];
//		
//		if(wt[n-1]<=tot_wt)
//		//	return dp[n][tot_wt]= memSubsetSum(wt,tot_wt-wt[n-1],n-1) ||
//		//			memSubsetSum(wt,tot_wt,n-1);
//		else
//			return dp[tot_wt][n]=memSubsetSum(wt,tot_wt,n-1);
	}
	
	public boolean tabSubsetSum(int wt[],int tot_wt,int n) {		
		
		for(int i=0;i<n+1;i++) {
			for(int j=0;j<tot_wt+1;j++) {
				if(i==0) 
					dp1[i][j]=false;
				
				else if(j==0)
					dp1[i][j]=true;
				
				else if(wt[i-1]<=j) 
					dp1[i][j]=dp1[i-1][j-wt[i-1]] || dp1[i-1][j];
				
				else
					dp1[i][j]=dp1[i-1][j];	
			}
		}
	return dp1[n][tot_wt];
	}
	
	
	
	
	public static void main(String[] args) {
		SubsetSum ob = new SubsetSum();
		int wt[]= {43,2,31,5,3,8};
		int tot_wt=39;
		int n=wt.length;
		System.out.println(ob.recSubsetSum(wt,tot_wt,n));
		ob.ArrayInit1(n,tot_wt);
		System.out.println(ob.tabSubsetSum(wt,tot_wt,n));
		
	}

}
