package Array;

public class ArrayApplication1 {

	int len1;
	int arr1[];
	int len2;
	int arr2[];
	
	public void insertElement(int arr1[],int arr2[]) {
		this.arr1=arr1;
		len1=arr1.length;
		this.arr2=arr2;
		len2=arr2.length;
	}
	
	public void printElement() {
		System.out.println();
		System.out.print("Array: ");
		for(int i=0;i<len1;i++)
			System.out.print(arr1[i]+" ");
	}
	
	
	public void UnionSorted() {
		int arr[]=new int[len1+len2];
		int i=0;
		int j=0;
		int z=0;
		while(i<len1-1 && j<len2-1) {
			if(arr1[i]==arr1[i+1])
				i++;
			else if(arr1[j]==arr1[j+1])
				j++;
			
			else if(arr1[i]<arr2[j])
				arr[z++]=arr1[i++];
				
			else if(arr2[j]<arr1[i])
				arr[z++]=arr2[j++];
			else {
				arr[z++]=arr2[j++];
				i++;
			}
			
		}
		
		System.out.println();
		System.out.print("Array: ");
		for(int l=0;l<z;l++)
			System.out.print(arr[l]+" ");
	}
	
	

	public static void main(String[] args) {
		ArrayApplication1 ob = new ArrayApplication1();
		int arr1[]= {2,1,2,1,0,1,2,3,4};
		int arr2[]= {2,1,2,1,0,1,2,3,4};
		ob.insertElement(arr1,arr2);
		ob.UnionSorted();
		

	}

}
